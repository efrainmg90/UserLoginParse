<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.efrainmg90.userloginparse.HomeActivity">

 <LinearLayout
     android:id="@+id/zone_titles"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/txv_title_home"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
         <TextView
             android:layout_below="@id/txv_title_home"
             android:text="Mis notas"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
     </RelativeLayout>
 </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/zone_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/list_view_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true" />
    </LinearLayout>
</RelativeLayout>
